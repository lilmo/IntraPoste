<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="action" namespace="/" extends="struts-default">
        
<!--    
                                    ********** HEADER **********
-->
        <!--    Header.jsp    -->
        <action name="Onglets" class="yakhospital.struts.action.OngletsAction">
            <result name="success">/onglets.jsp</result>
        </action>
        
<!--    
                                    ********** PATIENTS **********
-->
        
        <!--    AccueilPatient.jsp    -->
        <action name="AccueilPatient" class="yakhospital.struts.action.AccueilPatientAction">
            <result name="success">/accueilpatient.jsp</result>
            <result name="none" type="redirectAction">AccueilPatient</result>
        </action>
        
        <!--    CreationPatient.jsp    -->
        <action name="CreerPatient" class="yakhospital.struts.action.CreerPatientAction">
            <result name="input">/creationpatient.jsp</result>
            <result name="none" type="redirectAction">AccueilPatient</result>
            <result name="success" type="redirectAction">AjouterPremierSoin</result>
        </action>
        
        <!--    ModificationPatient.jsp    -->
        <action name="ModifierPatient" class="yakhospital.struts.action.ModifierPatientAction">
            <result name="input">/modificationpatient.jsp</result>
            <result name="success" type="redirectAction">ConsultationPatient</result>
            <result name="none" type="redirectAction">ConsultationPatient</result>
        </action>
        
        <!--    ConsultationPatient.jsp    -->
        <action name="ConsultationPatient" class="yakhospital.struts.action.ConsultationPatientAction">
            <result name="ajouter" type="redirectAction">AjouterSoin</result>
            <result name="input">/consulterpatient.jsp</result>
            <result name="error">/consulterpatient.jsp</result>            
            <result name="success" type="redirectAction">ModifierPatient</result>
        </action>
        
<!--            ConsultationPatient.jsp    
        <action name="RefreshConsultationPatient" class="yakhospital.struts.action.RefreshConsultationPatientAction">
            <result name="success" type="redirectAction">ConsultationPatient</result>
        </action>-->

<!--    
                                    ********** SOINS **********
-->
        
        <action name="AjouterSoin" class="yakhospital.struts.action.AjouterSoinAction">
            <result name="success" type="redirectAction">ConsultationPatient</result>
            <result name="none">/ajoutsoin.jsp</result>
            <result name="input">/ajoutsoin.jsp</result>
            <result name="choisi">/ajoutsoin.jsp</result>
        </action>
        
        <action name="AjouterPremierSoin" class="yakhospital.struts.action.AjouterPremierSoinAction">
            <result name="success" type="redirectAction">ConsultationPatient</result>
            <result name="none" type="redirectAction">CreerPatient</result>
            <result name="error">/ajoutpremiersoin.jsp</result>
            <result name="input">/ajoutpremiersoin.jsp</result>
            <result name="choisi">/ajoutpremiersoin.jsp</result>
        </action>
        
        

 <!--    
                                    ********** TITULAIRES **********
-->

            <!--    AccueilTitulaire.jsp    -->
        <action name="AccueilTitulaire" class="yakhospital.struts.action.AccueilTitulaireAction">
            <result name="success">/accueiltitulaire.jsp</result>
            <result name="none" type="redirectAction">AccueilTitulaire</result>
        </action>
        
            <!--    CreationTitulaire.jsp    -->
        <action name="CreerTitulaire" class="yakhospital.struts.action.CreerTitulaireAction">
            <result name="input">/creationtitulaire.jsp</result>
            <result name="none" type="redirectAction">AccueilTitulaire</result>
            <result name="success" type="redirectAction">AccueilTitulaire</result>
        </action>
        
        <!--    ModificationTitulaire.jsp    -->
        <action name="ModifierTitulaire" class="yakhospital.struts.action.ModifierTitulaireAction">
            <result name="input">/modificationtitulaire.jsp</result>
            <result name="success" type="redirectAction">AccueilTitulaire</result>
            <result name="none" type="redirectAction">AccueilTitulaire</result>
        </action>

<!--    

                                    ********** POSTES **********
-->
             
        <!--    AccueilPoste.jsp    -->
        <action name="AccueilPoste" class="yakhospital.struts.action.AccueilPosteAction">
            <result name="success">/accueilposte.jsp</result>
        </action>

        <!--    CreationPoste.jsp    -->
        <action name="CreerPoste" class="yakhospital.struts.action.CreerPosteAction">
            <result name="input">/creationposte.jsp</result>
            <result name="none">/creationposte.jsp</result>
            <result name="success" type="redirectAction">AccueilPoste</result>
        </action>
        
        <!--    ModifierPoste.jsp    -->
        <action name="ModifierPoste" class="yakhospital.struts.action.ModifierPosteAction">
            <result name="input">/modifierposte.jsp</result>
            <result name="success" type="redirectAction">AccueilPoste</result>
        </action>
        
<!--    
                                    ********** TYPE DE SOIN **********
-->
             
        <!--    AccueilTypeSoin.jsp    -->
        <action name="AccueilTypeSoin" class="yakhospital.struts.action.AccueilTypeSoinAction">
            <result name="success">/accueiltypesoin.jsp</result>
        </action>

        <!--    CreationTypeSoin.jsp    -->
        <action name="CreerTypeSoin" class="yakhospital.struts.action.CreerTypeSoinAction">
            <result name="input">/creationtypesoin.jsp</result>
            <result name="none">/creationtypesoin.jsp</result>
            <result name="success" type="redirectAction">AccueilTypeSoin</result>
        </action>

        
        <!--    ModifierTypeSoin.jsp    -->
        <action name="ModifierTypeSoin" class="yakhospital.struts.action.ModifierTypeSoinAction">
            <result name="input">/modifiertypesoin.jsp</result>
            <result name="success" type="redirectAction">AccueilTypeSoin</result>
        </action>        
<!--    
                                    ********** SERVICES **********
-->

        <!--    AccueilService.jsp    -->
        <action name="AccueilService" class="yakhospital.struts.action.AccueilServiceAction">
            <result name="success">/accueilservice.jsp</result>
        </action>

        <!--    CreationService.jsp    -->
        <action name="CreerService" class="yakhospital.struts.action.CreerServiceAction">
            <result name="input">/creationservice.jsp</result>
            <result name="success" type="redirectAction">AccueilService</result>
            <result name="none">/creationservice.jsp</result>
        </action>
        
        <!--    ModifierService.jsp    -->
        <action name="ModifierService" class="yakhospital.struts.action.ModifierServiceAction">
            <result name="input">/modifierservice.jsp</result>
            <result name="success" type="redirectAction">AccueilService</result>
        </action>

<!--    
                                    ********** SALLES **********
-->
        <!--    AccueilSalle.jsp    -->
        <action name="AccueilSalle" class="yakhospital.struts.action.AccueilSalleAction">

            <result name="success">/accueilsalle.jsp</result>
        </action>
        
        <!--    CreationSalle.jsp    -->
        <action name="CreerSalle" class="yakhospital.struts.action.CreerSalleAction">
            <result name="input">/creationsalle.jsp</result>
            <result name="none">/creationsalle.jsp</result>
            <result name="success" type="redirectAction">AccueilSalle</result>
        </action>   
        
        <!--    ModifierSalle.jsp    -->
        <action name="ModifierSalle" class="yakhospital.struts.action.ModifierSalleAction">
            <result name="input">/modifiersalle.jsp</result>
            <result name="success" type="redirectAction">AccueilSalle</result>
        </action>

<!--    
                                    ********** DROITS **********
-->
        
        <!-- DEBUT Action des droits et login -->
        
        <action name="GererDroit" class="yakhospital.struts.action.GestionDroitsAction">
            <result name="none">/gestiondroits.jsp</result>
            <result name="success" type="redirectAction">GererDroit</result>
            <result name="error">/gestiondroits.jsp</result>
        </action>
        
        <action name="SupprimerDroit" class="yakhospital.struts.action.GestionDroitsAction">
            <result name="error" type="redirectAction">GererDroit</result>
            <result name="success" type="redirectAction">GererDroit</result>
        </action>
        
        <action name="CreerDroit" class="yakhospital.struts.action.GestionDroitsAction">
            <result name="error" type="redirectAction">GererDroit</result>
            <result name="success" type="redirectAction">GererDroit</result>
        </action>
        
        <action name="NewLogin" class="yakhospital.struts.action.NewLoginAction">
            <result name="error">/newLogin.jsp</result>
            <result name="success" type="redirectAction">AccueilPatient</result>
        </action>
        
        <action name="LoginPage" class="yakhospital.struts.action.LoginPageAction">
            <result name="error">/loginPage.jsp</result>
            <result name="none" type="redirectAction">NewLogin</result>
            <result name="success" type="redirectAction">AccueilPatient</result>
        </action>
        
        <action name="AssignerPoste" class="yakhospital.struts.action.GestionDroitsAction">
            <result name="success" type="redirectAction">GererDroit</result>
            <result name="none">/gestiondroits.jsp</result>
        </action>
        
        
        <!-- FIN Action des droits et login -->
        
<!--    
                                    ********** IMPORT/EXPORT **********
-->

        <action name="Import" class="yakhospital.struts.action.ImportAction">
            <result>/import.jsp</result>
        </action>
        <action name="Export" class="yakhospital.struts.action.ExportAction">
            <result>/export.jsp</result>
        </action> 

    </package>
</struts>